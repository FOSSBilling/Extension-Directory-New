{% extends 'base.html.twig' %}

{% block content %}
    <section class="my-5">
        <h2 class="h2">About</h2>
        <p>This is the FOSSBilling Extension Directory.</p>
    </section>

    <section class="my-5">
        <h2 class="h2">How do I add my extension?</h2>
        <p>TODO: Add this</p>
    </section>

    <section class="my-5">
        <h2 class="h2">Extension Directory stats</h2>

        <div class="row">
            <div class="col-md-6">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Stat Name</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Total extensions</td>
                            <td>{{ stats.total_extensions }}</td>
                        </tr>
                        <tr>
                            <td>Modules available</td>
                            <td>{{ stats.extension_types['mod'] }}</td>
                        </tr>
                        <tr>
                            <td>Payment gateways available</td>
                            <td>{{ stats.extension_types['payment-gateway'] }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="col-md-6">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Stat Name</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Total authors</td>
                            <td>{{ stats.total_authors }}</td>
                        </tr>
                        <tr>
                            <td>Individual authors</td>
                            <td>{{ stats.author_types['individual'] }}</td>
                        </tr>
                        <tr>
                            <td>Organization authors</td>
                            <td>{{ stats.author_types['organization'] }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="col-md-6">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Stat Name</th>
                            <th>Value</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Cache size</td>
                            <td>{{ stats.cache_size|byte_units_format_metric('MB') }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
{% endblock %}
